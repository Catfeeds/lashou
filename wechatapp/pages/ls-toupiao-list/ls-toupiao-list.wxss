.clearfix{
  display: table;/* 触发bfc,让div具有包裹性*/
}
.clearfix:before,.clearfix:after{
  content: "";
  display:block;
  clear: both;
  height: 0px;
}
.player{
  width: 50%;
  float: left;
  text-align: center;
  font-size: x-small;
  padding:10rpx;
}
.player image{
  width: 300rpx;
  height: 300rpx;
}
.player .player-vote{
  font-size: large;
  background: #f8739f;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  color: #ffffff;
}

.player-tab{
  display: flex;
  background: #ffffff;
}
.player-tab .player-tab_item{
  text-align: center;
  background: #ffffff;
  color: #666666;
  flex: 1;
  line-height: 200%;
  font-size: large;
}
.player-tab .player-tab_active{
  background: #f8739f;
  color: #ffffff;
}

.player-avatar{
  font-size: 0;
}

.player-nickname{
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.player-tickets{
  height: 88rpx;
  line-height: 88rpx;
  overflow: hidden;
  font-size: large;
}
.ls-toupiao-list-count{
  line-height: 88rpx;
  text-align: center;
  background: #fff;
}