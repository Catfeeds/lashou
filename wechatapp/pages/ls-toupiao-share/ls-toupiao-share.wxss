page{
  background-image: url(https://api.anmeila.com.cn/statics/images/ssds/lapiao-bg.png);
  background-size: cover;
  background-repeat: no-repeat; 
  background-attachment: fixed; 
  padding-top: 120rpx;
}
.ls-toupiao-share_box{
  background-color: #ffffff;
  margin: 16rpx;
  border-radius: 10rpx;
  position: relative;
  padding-bottom: 16rpx;
}

.ls-toupiao-share_desc{
}

.ls-toupiao-share .player-info{
  width: 200rpx;
  position: absolute;
  left: 50%;
  top:-90rpx;
  text-align: center;
  margin-left: -100rpx;
  overflow: hidden;
}

.ls-toupiao-share .player-info image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}

.player-info_declaration{

}
.player-info_declaration::before, .player-info_declaration::after{
  content:" ";
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  opacity: 0.2;
}
.player-info_declaration::before{
  background: url(https://api.anmeila.com.cn/statics/images/ssds/quote_left.png);
  background-size: cover;
  margin-right: 32rpx;
}
.player-info_declaration::after{
  background: url(https://api.anmeila.com.cn/statics/images/ssds/quote_right.png);
  background-size: cover;
  margin-left: 32rpx;
}

.toupiao-handle{
  display: flex;
}
.toupiao-handle button{
  flex: 1;
  margin: 16rpx;
  width: 310rpx;
  height: 98rpx;
  background-size: cover;
  background-color: transparent;
  font-size: 0;
}
.toupiao-handle button::after{
  border: none;
}
.toupiao-handle button.toupiao-handle_vote{
  background-image: url(https://api.anmeila.com.cn/statics/images/ssds/lapiao-vote.png);
}
.toupiao-handle button.toupiao-handle_share{
  background-image: url(https://api.anmeila.com.cn/statics/images/ssds/lapiao-view.png);
}
.toupiao-tips{
  text-align: center;
  padding: 0 16rpx;
  font-size: small;
  color: #f5f5f5;
}

.go-index{
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  display: inline-block;
  background: transparent;
  color: #fff;
}
.go-index::after{
  border: none;
}
.ls-toupiao-player-count{
  text-align: center;
  color: #fff;
}