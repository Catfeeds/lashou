page{
  position: relative;
}
.ls-modal{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  visibility:hidden;
  opacity:0;
  transition:200ms;
}
.ls-modal.show{
  visibility:visible;
  opacity:1;
}
.ls-modal .ls-modal_main{
  width: 620rpx;
  background: #ffffff;
  margin:0 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}