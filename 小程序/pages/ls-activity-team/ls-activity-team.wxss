/* pages/ls-activity-team/ls-activity-team.wxss */
.banner{
  font-size: 0;
}

.banner image{
  width: 100%;
}

.team-item{
  margin-top: 16rpx;
  background-color: #ffffff;
  display: flex;
  font-size: 12px;
  align-items: center;
}

.team-item .user-info{
  overflow: hidden;
  padding: 16rpx;
  box-sizing: border-box;
  text-align: center;
}

.team-item .user-info .avatar{
  font-size: 0;
}
.team-item .user-info .avatar image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.team-item .share-info{
  padding: 16rpx;
  line-height: 20px;
}

.share_status{
  padding-left: 16rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
}

.tab {
  display: flex;
  align-items: center;
  background: #fff;
  margin-top: 16rpx;
  padding: 16rpx;
}

.tab .title{
  margin-right: 16rpx;
}

.tab .bd{
  flex: 1;
}

.tab-item{
  display: inline-block;
  padding: 6rpx 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-right: 16rpx;
}